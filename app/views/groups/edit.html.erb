<div class="section">
  <div class="container">
    <div class="row">
      <div class="form-group col-md-8 col-md-offset-2 pushdown">
        <h3>Edit your GiftSwap group</h3>
      </div>

      <% if @group.errors.any? %>
        <% @group.errors.full_messages.each do |msg| %>
          <div class="alert alert-danger" role="alert"><%= msg %></div>
        <% end %>
      <% end %>

      <%= form_for @group, class: 'form-horizontal' do |f| %>
        <div class="form-group col-md-8 col-md-offset-2">
          <%= f.label :name %>
          <%= f.text_field :name, placeholder: 'Group Name', class: 'form-control' %>
        </div>

        <div class="form-group col-md-8 col-md-offset-2">
          <%= f.label :description %>
          <%= f.text_area :description, placeholder: 'Group Description', class: 'form-control' %>
        </div>

        <div class="form-group col-md-8 col-md-offset-2">
          <%= f.label :exchange_date %>
          <%= f.date_field :exchange_date, value: '2016-12-24', class: 'form-control' %>
        </div>

        <div class="form-group col-md-8 col-md-offset-2">
          <%= f.label :max_price %>
          <%= f.number_field :max_price, placeholder: 'Max Gift Price', class: 'form-control' %>
        </div>

        <div class="col-md-8 col-md-offset-2">
          <%= f.submit 'Edit Group', class: 'btn btn-danger' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
