<div class="col-md-offset-2 col-md-8">
  <%= form_tag sessions_path, class: 'form-horizontal' do %>
    <div class='form-group'>
      <div class="col-md-12">
        <%= label_tag :email %>
        <%= text_field_tag :email, nil, placeholder: "Email", class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <div class="col-md-12">
        <%= label_tag :password %>
        <%= password_field_tag :password, nil, placeholder: "Password", class: 'form-control' %>
      </div>
    </div>

    <div class='form-group'>
      <div class="col-md-12">
        <%= submit_tag "Login", class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>
