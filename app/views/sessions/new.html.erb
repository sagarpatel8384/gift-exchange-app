<h1>Login</h1>

<%= flash[:notice] %>
<%= form_tag sessions_path do %>

  <div class="field">
    <%= label_tag :email %><br>
    <%= text_field_tag :email, nil, placeholder: "Email" %>  
  </div>

  <div class="field">
    <%= label_tag :password %><br>
    <%= password_field_tag :password, nil, placeholder: "Password" %>
  </div>
  <br>
  <div class="actions">
    <%= submit_tag "Login" %>
  </div>

<% end %>