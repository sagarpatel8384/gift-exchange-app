<div class="section">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-2 col-md-8 pushdown">
        <div class="form-group col-md-8 col-md-offset-2">
          <% if @user.errors.any? %>
            <% @user.errors.full_messages.each do |msg| %>
              <div class="alert alert-danger"><%= msg %></div>
            <% end %>
          <% end %>
        </div>

        <%= form_for @user, class: 'form-horizontal' do |f| %>
          <div class="form-group col-md-8 col-md-offset-2">
            <%= f.label :first_name, 'First Name' %>
            <%= f.text_field :first_name, placeholder: 'Jeff', class: 'form-control' %>
          </div>

          <div class="form-group col-md-8 col-md-offset-2">
            <%= f.label :last_name, 'Last Name' %>
            <%= f.text_field :last_name, placeholder: 'Katz', class: 'form-control' %>
          </div>

          <div class="form-group col-md-8 col-md-offset-2">
            <%= f.label :email %>
            <%= f.text_field :email, placeholder: 'jeff@example.com', class: 'form-control' %>
          </div>

          <div class="form-group col-md-8 col-md-offset-2">
            <%= f.label :password %>
            <%= f.password_field :password, placeholder: 'Password', class: 'form-control' %>
          </div>

          <div class="form-group col-md-8 col-md-offset-2">
            <%= f.label :password_confirmation, 'Confirm Password' %>
            <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'form-control' %>
          </div>

          <div class="form-group col-md-8 col-md-offset-2">
            <%= f.submit 'Register', class: 'btn btn-danger' %>
          </div>
        <% end %>
      </div>

    </div>
  </div>
</div>
