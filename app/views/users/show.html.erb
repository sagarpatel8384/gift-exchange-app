<%= flash[:notice] %>
<div>
  <div class='col-md-2'>
    <%= image_tag gravatar_url(@user, 150) %>
  </div>
  <div class='col-md-10'>
    <div class='username section-title'><%= @user.full_name %></div>

    <div>
      <span class='user-data-header section-title'>City:</span>
      <div class='user-data'><%= @user.city %></div>
    </div>

    <div>
      <span class='user-data-header section-title'>State:</span>
      <div class='user-data'><%= @user.state %></div>
    </div>

    <div>
      <span class='user-data-header section-title'>Country:</span>
      <div class='user-data'><%= @user.country %></div>
    </div>

    <div>
      <span class='user-data-header section-title'>Birthdate:</span>
      <div class='user-data'><%= @user.birthdate.strftime("%m/%d/%Y") if @user.birthdate %></div>
    </div>

    <div>
      <span class='user-data-header section-title'>Bio:</span>
      <p class='user-data bio'><%= @user.bio %></p>
    </div>

  </div>
</div>

<div class='row'></div>
  <div class='col-md-12'>
    <div class='profile-section section-title'>My Gift Exchanges</div>
      <% if current_user.groups.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>Group Name</th>
            </tr>
          </thead>
          <tbody>
            <% current_user.groups.each do |group| %>
              <tr>
                <td><%= link_to group.name, group_path(group) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        You are not in any gift exchanges.
      <% end %>
    </div>
  </div>

  <div class='col-md-12'>
    <div class='profile-section section-title'>My Invitations</div>
      <% if current_user.open_invitations.any? %>
        <table class="table">
          <thead>
            <tr>
              <th>Group Name</th>
            </tr>
          </thead>
          <tbody>
            <% current_user.open_invitations.each do |invite| %>
              <tr>
                <td><%= invite.group.name %></td>
                <td><%= link_to 'Accept', invitation_path(invite), method: :patch, class:'btn btn-success btn-sm' %></td>
                <td><%= link_to 'Decline', invitation_path(invite), method: :delete, class:'btn btn-danger btn-sm'  %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        You do not have any open invitations.
      <% end %>
    </div>
  </div>
