<%= flash[:notice] %>

<%= image_tag gravatar_url(@user, 64) %>
<h1><%= @user.full_name %></h1>
<h3><%= @user.bio %></h3>

<h3>Groups (Accepted)</h3>
<ul>
  <% current_user.groups.each do |group| %>
    <li><%= link_to group.name, group_path(group) %></li>
  <% end %>
</ul>

<h3>Group Invitations (Pending)</h3>
<ul>
  <% current_user.open_invitations.each do |invite| %>
    <li>
      <%=  invite.group.name %> | <%= link_to 'Accept', invitation_path(invite), method: :patch %> |
      <%= link_to 'Decline', invitation_path(invite), method: :delete %>
    </li>
  <% end %>
</ul>
