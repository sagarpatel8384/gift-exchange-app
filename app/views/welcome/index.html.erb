<div class="cover">
  <!-- NAV -->
  <div class="navbar homepage-nav">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="<%= root_path %>"><span>GiftSwap</span></a>
      </div>
      <div class="collapse navbar-collapse" id="navbar-ex-collapse">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "Sign Up", signup_path, class: "nav-links" %></li>
          <li><%= link_to "Log In", login_path, class: "nav-links" %></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- COVER -->
  <div class="cover-image"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h1 class="text-inverse">Gift Giving Made Easy</h1>
        <p class="text-inverse">Start a Secret Santa Gift Exchange Today</p>
        <br>
        <br>
        <button type="button" class="btn btn-lg btn-danger btn-size" data-toggle="modal" data-target="#myModal">Try</button>
        <%= link_to 'Sign Up', new_user_path, class: "btn btn-lg btn-success btn-size" %>
      </div>
    </div>
  </div>
</div>

<!-- MODAL -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Enter the names for your GiftSwap.</h4>
      </div>
      <div class="modal-body">
        <div id="full-width-head">
          <%= form_tag root_path, method: 'get', class: 'form-horizontal', id: 'match-form' do %>
            <div class='form-group'>
              <div class="col-md-6">
                <%= text_field_tag "emails[]", nil, class: 'form-control', placeholder: 'Name', placeholder: 'Name' %>
              </div>
              <div class="col-md-6">
                <%= text_field_tag "emails[]", nil, class: 'form-control', placeholder: 'Name' %>
              </div>
            </div>

            <div class='form-group'>
              <div class="col-md-6">
                <%= text_field_tag "emails[]", nil, class: 'form-control', placeholder: 'Name' %>
              </div>
              <div class="col-md-6">
                <%= text_field_tag "emails[]", nil, class: 'form-control', placeholder: 'Name' %>
              </div>
            </div>

            <div class='form-group'>
              <div class="col-md-6">
                <%= text_field_tag "emails[]", nil, class: 'form-control', placeholder: 'Name' %>
              </div>
              <div class="col-md-6">
                <%= text_field_tag "emails[]", nil, class: 'form-control', placeholder: 'Name' %>
              </div>
            </div>

            <div class='form-group'>
              <div class="col-md-6">
                <%= text_field_tag "emails[]", nil, class: 'form-control', placeholder: 'Name' %>
              </div>
              <div class="col-md-6">
                <%= text_field_tag "emails[]", nil, class: 'form-control', placeholder: 'Name' %>
              </div>
            </div>

            <div class='form-group'>
              <div class="col-md-6">
                <%= text_field_tag "emails[]", nil, class: 'form-control', placeholder: 'Name' %>
              </div>
              <div class="col-md-6">
                <%= text_field_tag "emails[]", nil, class: 'form-control', placeholder: 'Name' %>
              </div>
            </div>

            <div class='form-group'>
              <div class="col-md-6">
                <%= submit_tag 'Draw Names', class: 'btn btn-danger', id: 'match-names' %>
                <%= link_to 'Add More Names', signup_path, class: 'btn btn-success' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>
